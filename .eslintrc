{
	"env": {
		"browser": false,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {

		"generator-star-spacing": "off",
		"max-len": "off",
		"comma-dangle": 0,
		"no-throw-literal": "off",
		"no-undefined": "error",
		"arrow-body-style": [
			"error", "as-needed"
		],
		"curly": ["error", "multi-line"],
		"camelcase": "off",
		"indent": [
			"error", "tab"
		],
		"new-cap": "off",
		"no-param-reassign": [
			"error"
		],
		"func-names": [
			"error",
			"never"
		],
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_orQuery",
					"__count",
					"__r",
					"__o",
					"__result",
					"__object",
					"__type_name",
					"__sorted",
					"_sessiontoken",
					"__dirname",
					"__cacheKey"
				]
			}
		],
		"react/prop-types": 0,
		"no-console": [
			"error",
			{
				"allow": [
					"log",
					"warn",
					"error"
				]
			}
		]
	}
}